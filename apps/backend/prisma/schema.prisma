generator client {
  provider = "prisma-client"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
}

model User {
    id String @id @default(uuid())
    name String
    email String @unique
    password String
    createdAt DateTime @map("created_at")
}

model Zone {
    id String @id @default(uuid())
    name String
    type String
    geometry Json
    createdAt DateTime @map("created_at")
}
